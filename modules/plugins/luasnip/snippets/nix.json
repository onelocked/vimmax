{
  "Nix Attribute Set": {
    "prefix": "nix",
    "body": [
      "{ ... }:",
      "{",
      "  $0",
      "}"
    ],
    "description": "Generates a Nix function taking an ellipsis and returning an attribute set."
  },
  "Home Manager Shared Modules": {
    "prefix": "home",
    "body": [
      "home-manager.sharedModules = [",
      "  (",
      "    { ... }:",
      "    {",
      "      $0",
      "    }",
      "  )",
      "];"
    ],
    "description": "Standard boilerplate for home-manager sharedModules"
  },
    "NixOS Flake Module": {
    "prefix": "flakeModule",
    "body": [
      "{",
      "  flake.modules.nixos.${1:moduleName} = {",
      "    $0",
      "  };",
      "}"
    ],
    "description": "Defines a NixOS flake module under flake.modules.nixos"
  }
}
